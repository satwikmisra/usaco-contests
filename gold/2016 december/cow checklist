#include <bits/stdc++.h>

using namespace std;

int h, g;
vector<pair<int,int>>hol;
vector<pair<int,int>>gur;

int dist(pair<int,int>i, pair<int,int>j){
    return (i.first-j.first)*(i.first-j.first) + (i.second-j.second)*(i.second-j.second);
}

int main()
{
    ifstream cin("checklist.in");
    ofstream cout("checklist.out");
    cin>>h>>g;
    hol.push_back(make_pair(0,0)); gur.push_back(make_pair(0,0));
    for(int i=0;i<h;i++){
        int t1, t2; cin>>t1>>t2; hol.push_back(make_pair(t1,t2));
    }
    for(int i=0;i<g;i++){
        int t1, t2; cin>>t1>>t2; gur.push_back(make_pair(t1,t2));
    }
    int dp[h+1][g+1][2];
    for(int i=0;i<=h;i++){
        for(int j=0;j<=g;j++){
            dp[i][j][0]=dp[i][j][1]=1000000000;
        }
    }
    dp[1][0][0]=0;
    for(int i=2;i<=h;i++){
        dp[i][0][0]=dp[i-1][0][0]+dist(hol[i-1],hol[i]);
    }

    dp[1][1][1]=dp[1][0][0]+dist(hol[1],gur[1]);
    for(int j=2;j<=g;j++){
        dp[1][j][1]=dp[1][j-1][1]+dist(gur[j-1],gur[j]);
    }

    for(int i=2;i<=h;i++){
        for(int j=1;j<=g;j++){
            dp[i][j][0]=dp[i-1][j][1]+dist(hol[i],gur[j]);
            dp[i][j][0]=min(dp[i][j][0],dp[i-1][j][0]+dist(hol[i-1],hol[i]));
            dp[i][j][1]=dp[i][j-1][0]+dist(hol[i],gur[j]);
            dp[i][j][1]=min(dp[i][j][1],dp[i][j-1][1]+dist(gur[j-1],gur[j]));
        }
    }
    /*
    for(int i=0;i<=h;i++){
        for(int j=0;j<=g;j++){
            cout<<"("<<dp[i][j][0]<<","<<dp[i][j][1]<<")"<<" ";
        }
        cout<<"\n";
    }*/

    cout<<dp[h][g][0];
    return 0;
}
